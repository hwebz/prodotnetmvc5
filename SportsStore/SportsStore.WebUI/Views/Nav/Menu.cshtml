@model System.Collections.Generic.IEnumerable<string>

<div class="list-group" style="margin-top: 20px;">
    @Html.ActionLink("Home", "List", "Product", null, new { @class = "list-group-item" + (ViewBag.SelectedCategory == null ? " active" : "") })
    @foreach (var link in Model)
    {
        @Html.RouteLink(link, new
        {
            controller = "Product",
            action = "List",
            category = link,
            page = 1
        }, new
        {
            @class = "list-group-item" + (link == ViewBag.SelectedCategory ? " active" : "")
        })
    }
</div>